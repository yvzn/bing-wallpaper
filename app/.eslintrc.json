{
	"$schema": "https://json.schemastore.org/eslintrc",
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"prettier"
	],
	"ignorePatterns": [
		"node_modules",
		"vite.config.js",
		"dist",
		"dist-ssr"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
